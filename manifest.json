{
  "manifest_version": 3,
  "name": "Widgetize ASC",
  "description": "Mensagens r√°pidas para o SAC Messenger.",
  "version": "3.1",
  "permissions": ["storage"],
  "host_permissions": ["*://*.ascbrazil.com.br/*"],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Abrir Mensagens",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.ascbrazil.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}