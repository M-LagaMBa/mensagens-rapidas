{
  "manifest_version": 3,
  "name": "Widgetize ASC",
  "description": "Mensagens r√°pidas para o SAC Messenger.",
  "version": "3.0",
  "permissions": ["storage"],
  "host_permissions": ["*://*.ascbrazil.com.br/*"],
  "action": {
    "default_title": "Abrir Mensagens"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ascbrazil.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}